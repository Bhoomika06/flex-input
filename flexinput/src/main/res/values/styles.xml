<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?colorPrimary</item>
        <item name="colorPrimaryDark">?colorPrimaryDark</item>
        <item name="colorAccent">?colorAccent</item>
    </style>

    <style name="Input" parent="AppTheme">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="Input.Button" parent="Input">
        <item name="android:tint">?colorPrimary</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Input.Button.Tab" parent="Input.Button">
        <item name="android:tint">@android:color/white</item>
    </style>

</resources>

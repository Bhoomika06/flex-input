<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
    </style>

    <style name="FlexInput.Main" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FlexInput.Input" parent="AppTheme">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="FlexInput.Input.Button" parent="FlexInput.Input">
        <item name="android:tint">@color/button_color_selector</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="FlexInput.Input.Button.Tab" parent="FlexInput.Input.Button">
        <item name="android:tint">@android:color/white</item>
    </style>

    <style name="FlexInput.Items.File.Name" parent="AppTheme">
        <item name="android:textSize">14dp</item>
    </style>

    <style name="FlexInput.Items.File.Path" parent="AppTheme">
        <item name="android:textSize">10dp</item>
    </style>

</resources>
